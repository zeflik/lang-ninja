<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.sentences.community.CommunityFeedbackFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sentenceRowSentenceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Author"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/newSentenceRowUserPhoto"
                app:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/sentenceRowAuthorTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:text="creation date"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/sentenceRowSentenceTextView"
                app:layout_constraintTop_toBottomOf="@+id/sentenceRowSentenceTextView"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/imageView2"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/newSentenceRowUserPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_user_photo_background"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <ImageView
                android:id="@+id/newSentenceRowCommentIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_comment"
                card_view:layout_constraintBottom_toBottomOf="@+id/newSentenceRowCommentTextView"
                card_view:layout_constraintEnd_toStartOf="@+id/newSentenceRowCommentTextView"
                card_view:layout_constraintTop_toTopOf="@+id/newSentenceRowCommentTextView" />

            <TextView
                android:id="@+id/newSentenceRowCommentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="15"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                card_view:layout_constraintBottom_toBottomOf="@+id/sentenceRowAuthorTextView"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/sentenceRowAuthorTextView" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_thumb_up"
                card_view:layout_constraintBottom_toBottomOf="@+id/newSentenceRowThumbsTextView"
                card_view:layout_constraintEnd_toStartOf="@+id/newSentenceRowThumbsTextView"
                card_view:layout_constraintTop_toTopOf="@+id/newSentenceRowThumbsTextView" />

            <TextView
                android:id="@+id/newSentenceRowThumbsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="15"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                card_view:layout_constraintBottom_toBottomOf="@+id/imageView"
                card_view:layout_constraintEnd_toStartOf="@+id/imageView"
                card_view:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="@drawable/ic_thumb_down"
                card_view:layout_constraintBottom_toBottomOf="@+id/newSentenceRowCommentIcon"
                card_view:layout_constraintEnd_toStartOf="@+id/newSentenceRowCommentIcon"
                card_view:layout_constraintTop_toTopOf="@+id/newSentenceRowCommentIcon" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>